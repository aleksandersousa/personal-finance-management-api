# Configurações de Desenvolvimento
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/financial_db?sslmode=disable
DATABASE_SSL=false
DB_NAME=financial_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_PORT=5432

# API
PORT=3000
API_PREFIX=api/v1

# JWT Configuration
# Main JWT secret (for backward compatibility)
JWT_SECRET=your-super-secret-key-for-development-only-change-in-production
# Access token configuration
JWT_ACCESS_SECRET=your-super-secret-access-key-for-development-only-change-in-production
# Refresh token configuration (should be DIFFERENT from access secret for security)
JWT_REFRESH_SECRET=your-super-secret-refresh-key-for-development-only-change-in-production-different-from-access
# Token expiration times
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS
FRONTEND_URL=http://localhost:3001

# Logging
LOG_LEVEL=debug 