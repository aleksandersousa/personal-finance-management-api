{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1",
    "^@domain/(.*)$": "<rootDir>/../src/domain/$1",
    "^@data/(.*)$": "<rootDir>/../src/data/$1",
    "^@infra/(.*)$": "<rootDir>/../src/infra/$1",
    "^@presentation/(.*)$": "<rootDir>/../src/presentation/$1",
    "^@main/(.*)$": "<rootDir>/../src/main/$1"
  }
}