# Configurações de Staging/Homologação
NODE_ENV=staging

# Database
DATABASE_URL=postgresql://staging_user:staging_password@staging-db:5432/financial_db_staging?sslmode=require
DATABASE_SSL=true
DB_NAME=financial_db_staging
DB_USER=staging_user
DB_PASSWORD=CHANGE_THIS_STAGING_PASSWORD
DB_HOST=staging-db
DB_PORT=5432

# API
PORT=3000
API_PREFIX=api/v1

# JWT Configuration
JWT_SECRET=CHANGE_THIS_STAGING_JWT_SECRET
JWT_ACCESS_SECRET=CHANGE_THIS_STAGING_ACCESS_SECRET
JWT_REFRESH_SECRET=CHANGE_THIS_STAGING_REFRESH_SECRET
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting (more restrictive than dev, less than prod)
THROTTLE_TTL=60
THROTTLE_LIMIT=50

# CORS
FRONTEND_URL=https://staging.financial-app.com

# Observability
LOG_LEVEL=info
METRICS_ENABLED=true
TRACING_ENABLED=true

# External Services
NOTIFICATION_SERVICE_URL=https://staging-notifications.financial-app.com
PAYMENT_SERVICE_URL=https://staging-payments.financial-app.com

# Security
HELMET_ENABLED=true
SECURE_COOKIES=true

# Feature Flags
FEATURE_NEW_DASHBOARD=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_BETA_FEATURES=true

# Staging specific
STAGING_DATA_RETENTION_DAYS=30
STAGING_RESET_SCHEDULE=0 2 * * 0  # Reset data every Sunday at 2 AM 